<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rllockercard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity=""
    android:background="@drawable/lockerbox"
    android:paddingTop="8dp"
    android:paddingBottom="7dp"
    android:layout_marginBottom="10dp">

    <LinearLayout

        android:layout_centerVertical="true"
        android:id="@+id/llsize"
        android:layout_width="71dp"
        android:layout_height="66dp"
        android:layout_marginLeft="17dp"

        android:background="@drawable/typlocker"
        android:gravity="center">

        <TextView
            android:id="@+id/tvlockersize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:fontFamily="@font/nunitoextrabold"
            android:text="XL"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="@color/white"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginLeft="11dp"
        android:id="@+id/lltextlocker"
        android:layout_toRightOf="@id/llsize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvlockernumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="L001"
            android:textColor="@color/black4"
            android:textSize="30sp"
            android:fontFamily="@font/nunitoextrabold"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvlockerlocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Universitas Bina Nusantaras, Lt1"
            android:textColor="@color/black4"
            android:textSize="15sp"
            android:fontFamily="@font/nunitoregular"
            android:textStyle="normal"/>

    </LinearLayout>


</RelativeLayout>